#include "holberton.h"
#include <stdio.h>

/**
 * cap_string - capitalizes all words in a string
 *
 * @s: string to change
 *
 * Return: altered string
 */

char *cap_string(char *s)
{
	int i, range = 'a' - 'A';

	for (i = 0; s[i] != '\0'; i++)
		if (s[i] >= 'a' && s[i] <= 'z')
			s[i] -= range;
	return (s);
}
